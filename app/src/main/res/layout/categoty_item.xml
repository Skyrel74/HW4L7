<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/categotyIdTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/categotyIdTv"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/categotyNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:text="@string/productName"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@id/categotyIdTv"
        app:layout_constraintStart_toEndOf="@+id/categotyIdTv"
        app:layout_constraintTop_toTopOf="@id/categotyIdTv" />

    <TextView
        android:id="@+id/categotyPriceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/discount_present"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@id/categotyNameTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/categotyNameTv"
        app:layout_constraintTop_toTopOf="@id/categotyNameTv" />


</androidx.constraintlayout.widget.ConstraintLayout>